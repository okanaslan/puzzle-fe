{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "outDir": "dist",
        "rootDir": "src",
        "lib": ["ES2022"],
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "declaration": true,
        "noImplicitOverride": true,
        "noFallthroughCasesInSwitch": true,
        "skipDefaultLibCheck": true
    },
    "exclude": ["node_modules", "dist"]
}
